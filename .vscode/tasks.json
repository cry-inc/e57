{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "command": "cargo",
            "args": [
                "build",
                "--all"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Format",
            "command": "cargo",
            "args": [
                "fmt",
                "--all"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Clippy",
            "command": "cargo",
            "args": [
                "clippy",
                "--all"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Docs",
            "command": "cargo",
            "args": [
                "doc",
                "--all"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Test",
            "command": "cargo",
            "args": [
                "test",
                "--all"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Full Check",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Format",
                "Clippy",
                "Docs",
                "Build",
                "Test"
            ],
            "problemMatcher": []
        },
        {
            "label": "Clean Coverage Data",
            "type": "shell",
            "command": "rm",
            "args": [
                "*.profraw"
            ],
            "problemMatcher": []
        },
        {
            "label": "Clean Coverage Report",
            "type": "shell",
            "command": "rm",
            "args": [
                "target/coverage_*",
                "-R"
            ],
            "problemMatcher": []
        },
        {
            "label": "Measure Coverage",
            "command": "cargo",
            "args": [
                "test",
                "--all"
            ],
            "options": {
                "env": {
                    "CARGO_INCREMENTAL": "0",
                    "RUSTFLAGS": "-Cinstrument-coverage",
                    "LLVM_PROFILE_FILE": "%m.profraw"
                }
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Export Coverage",
            "command": "grcov",
            "args": [
                ".",
                "--binary-path",
                "target/debug",
                "--source-dir",
                "src",
                "--output-type",
                "html",
                "--output-path",
                "target/coverage_html"
            ],
            "problemMatcher": []
        },
        {
            "label": "Show Coverage",
            "type": "shell",
            "command": "target/coverage_html/index.html",
            "problemMatcher": []
        },
        {
            "label": "Code Coverage",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clean Coverage Data",
                "Clean Coverage Report",
                "Measure Coverage",
                "Export Coverage",
                "Show Coverage"
            ],
            "problemMatcher": []
        }
    ]
}